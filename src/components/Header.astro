---
import Logo from '../components/Logo.astro';

const navItems = [
  { linkText: 'Home', href: '/' },
  { linkText: 'Finds', href: '/finds' },        // you'll build these tag pages later
  { linkText: 'Models', href: '/models' },      // tag page later
  { linkText: 'References', href: '/references' }, // NEW
  { linkText: 'Archive', href: '/archive' },    // optional
  { linkText: 'About', href: '/about' }         // optional
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
