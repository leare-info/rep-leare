---
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
---

<main class="prose mx-auto py-8">
  <h1>Posts</h1>
  <ul>
    {posts.map((p) => (
      <li>
        <a href={`/posts/${p.slug}`}>{p.data.title}</a>
        {p.data.summary && <p class="text-sm text-gray-600">{p.data.summary}</p>}
      </li>
    ))}
  </ul>
</main>
